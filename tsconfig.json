{
  "compilerOptions": {
    "target": "ES2020",                   
    "module": "CommonJS",                 
    "lib": ["ES2020"],

    "rootDir": "src",                    
    "outDir": "dist",                     

    "strict": true,                       
    "noImplicitAny": true,                
    "strictNullChecks": true,             

    "esModuleInterop": true,             
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,            
    "skipLibCheck": true,                 
    "forceConsistentCasingInFileNames": true,

    "sourceMap": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
